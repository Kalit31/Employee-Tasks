<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OwnersAct">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_layout"
            android:background="@color/colorPrimary"
    >
    <Button
            android:text="@string/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout_owners"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_design"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"

            android:layout_above="@id/bottom_nav" android:layout_marginTop="0dp"
            android:layout_below="@+id/button_layout" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"/>




    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:id="@+id/bottom_nav"
            android:background="?android:attr/windowBackground">



    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>