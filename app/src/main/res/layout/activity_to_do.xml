<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ToDoActivity"
        android:padding="8dp"
        android:orientation="vertical">

   <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_weight="0.08">

       <Button
               android:text="@string/logout"
               android:background="@drawable/button_design"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/logout"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true" tools:ignore="RelativeOverlap,RtlHardcoded"/>
       <TextView
               android:text="TextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/textView"
               android:gravity="center"
               android:background="@drawable/text_underline"
               android:textSize="25sp"
               android:layout_alignParentLeft="true"
               android:textColor="#0B70C2"
               android:layout_centerVertical="true"
               android:layout_alignParentStart="true"
               android:layout_marginLeft="0dp"
               android:layout_marginStart="0dp"
               tools:ignore="HardcodedText"/>

   </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"

        >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="@string/status"
                  android:gravity="left|center"
                  android:paddingLeft="8dp"
                  android:background="@drawable/design_status"
                  android:layout_weight="0.2"
                  android:textColor="#0B70C2"
                  android:layout_gravity="center"
                  tools:ignore="NestedWeights,RtlHardcoded" android:textSize="20sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="@string/description"
                  android:gravity="center"
                  android:background="@drawable/design_task"
                  android:textColor="#0B70C2"
                  android:layout_gravity="center"
                  android:layout_weight="0.5"
                  android:textSize="20sp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="@string/complete_by"
                  android:background="@drawable/design_date"
                  android:gravity="right|center"
                  android:paddingRight="8dp"
                  android:textColor="#0B70C2"
                  android:layout_gravity="center"
                  android:layout_weight="0.3"
                  tools:ignore="RtlHardcoded" android:textSize="20sp"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
           />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:layout_gravity="center"
            android:text="@string/update"
            android:id="@+id/updateTask"
            android:background="@drawable/button_design2"
            android:gravity="center"
    />


</LinearLayout>